
<% if current_user %>  
  <h2><%= current_user.username.upcase %>'S Current Subscriptions</h2>
<% else %>  
<h1>All Current Subscriptions</h1>
<% end %>

<% if @subscriptions.length == 0 %>
    <h2>No Current Subscriptions</h2>
    <% else %>
    <% @subscriptions.each do |s| %>
      <p>  
        Company: <%= s.company.name %></br>
        Type_of_subscription: <%= s.type_of_subscription %><br>
        Amount Per Month: $<%= s.amount_per_month %></br>
          <% if current_user == s.user %>
            <%= link_to 'edit', edit_subscription_path(s.id) %>
          <% end %>

        <%= button_to 'Delete', subscription_path(s.id), method: 'delete' %><br>
      </p>  
    <% end %>
    <br>
<% end %>
