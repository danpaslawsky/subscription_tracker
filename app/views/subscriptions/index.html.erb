<h1>Subscriptions#index</h1>
<p>Find me in app/views/subscriptions/index.html.erb</p>

<% if @subscriptions.length == 0 %>
    <h2>No Current Subscriptions</h2>
    <% else %>
    <% @subscriptions.each do |s| %>
      <p>  
        Company: <%= s.company.name %></br>
        Company Description: <%= s.company.description %><br>
        Amount Per Month: $<%= s.amount_per_month %></br>

        <%= button_to 'Delete', subscription_path(s.id), method: 'delete' %>
      </p>  
    <% end %>
<% end %>