<h1> Login Here </h1>

<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <div id="error_explanation">
        <h3><%= flash[:error] %></h3>
      </div>
    </div>
  <% end %>
<br>
<%= form_with url: login_path do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit 'Login' %>
    
<% end %>

<h1>Or Signup</h1>
<%= link_to 'Sign Up', signup_path %> 

<h1>Or Login with Google:</h1>

<%= button_to 'Google', '/auth/google_oauth2' %>